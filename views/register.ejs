    <!-- header section end -->
    <form>
        <div class="container">
            <center>
                <h1> Registeration Form </h1>
            </center>
            <hr>
            <label> Firstname </label>
            <input type="text" name="firstname" placeholder="Firstname" size="15" required />
            <label> Middlename: </label>
            <input type="text" name="middlename" placeholder="Middlename" size="15" required />
            <label> Lastname: </label>
            <input type="text" name="lastname" placeholder="Lastname" size="15" required />
            <div style="width: 35rem;font-size: 2rem;font-weight: 500;">
                <label style="margin-right : 2rem;">
                    Choose :
                </label>

                <select style="font-size: large;border:2px solid black">
                    <option value="select">Sport</option>
                    <option value="Basketball">Basketball</option>
                    <option value="Football">Football</option>
                    <option value="Cricket">Cricket</option>
                    <option value="Volleyball">Volleyball</option>
                    <option value="American Football">American Football</option>
                    <option value="Badminton">Badminton</option>
                </select>
            </div>
            <div class="gender-type" style="width: 50rem; display: flex;">
                <div class="gender">
                    <label>
                        Gender :
                    </label>
                </div>
                <div class="gtype" style="display: flex; margin-left: 2rem;">
                    <input type="radio" value="Male" name="gender" checked
                        style="margin-top: 0.5rem; margin-right: 1rem;">
                    <p style="font-size: medium;">Male</p>
                    <input type="radio" value="Female" name="gender" style="margin-top: 0.5rem;
                        margin-left: 1rem; margin-right: 1rem;">
                    <p style="font-size: medium;"> Female </p>
                    <input type="radio" value="Other" name="gender" style="margin-top: 0.5rem;
                        margin-left: 1rem; margin-right: 1rem">
                    <p style="font-size: medium;"> Other </p>
                </div>

            </div>
            <label>
                Phone :
            </label>
            <input type="text" name="country code" placeholder="Country Code" value="+91" size="2" />
            <h2> Address :</h2>
            <textarea cols="80" rows="5" placeholder="Current Address" value="address" required>
    </textarea>
            <label for="email"><b>Email</b></label>
            <input type="text" placeholder="Enter Email" name="email" required>

            <label for="text"><b>University</b></label>
            <input type="text" placeholder="Enter university name" name="name" required>

            <button type="submit" class="registerbtn">Register</button>
        </div>
    </form>
